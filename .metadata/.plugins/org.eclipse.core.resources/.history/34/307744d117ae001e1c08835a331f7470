package day04;

public class For07 {

	public static void main(String[] args) {
		// 이중 For문
		/* for(int i=1; i <=5; i++) {	  i = 1   2   3   4   5
		 * 		for(int j=1; j <=5; j++){ j = 1~5 1~5 1~5 1~5 1~5
		 * 			실행문; 5 5 5 5 5 => 25번 실행
		 * 	  }
		 * }
		 */
		
		//별찍기
		/* ***** i=1, j=5
		 * ***** i=2, j=5
		 * ***** i=3, j=5
		 * ***** i=4, j=5
		 * ***** i=5, j=5
		 */
		for(int i=1; i<=5; i++) { //줄
			for(int j=1; j<=5; j++) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
			
		}
		
		System.out.println("-----------");
		

		for(int i=1; i<=5; i++) { //줄
			for(int j=1; j<=i; j++) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
			
		}
		System.out.println("-----------");
		
		for(int i=1; i<=5; i++) { //줄
			for(int j=i; j<=5; j++) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
			
		}
		System.out.println("-----------");

		for(int i=1; i<=5; i++) { //줄
			//공백
			for(int j=1; j<=5-i; j++) {
				System.out.print(" ");
			}
			//별
			for (int k=1; k<=i; k++) {
				System.out.print("*");
			}
			System.out.println(); //한 줄 끝나면 줄바꿈
		}
		System.out.println("----------");
	}

}
