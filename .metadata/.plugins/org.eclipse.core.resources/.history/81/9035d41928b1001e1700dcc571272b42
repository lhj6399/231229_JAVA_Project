package day08;

public class Method05 {

	public static void main(String[] args) {
		/*
		 * 
		 */

		boolean b = isPrime(5);
		System.out.println(b);
		
	}

	/* 정수 하나가 주어지면 이 정수가 소수인지 아닌지 판별(true/false)
	 * 리턴타입 : boolean
	 * 매개변수 : int num
	 * 메서드명 : isPrime
	 */
	
	public static boolean isPrime (int num) {
		int count = 0; // 약수가 2개인지 세기 위한 count
			for (int i=1; i<=num; i++) {
				if (num % i == 0) {
					count++;
				}
			}
			if(count == 2) {
				return true;
			} else{
				return false;
			}
		}
	
}
